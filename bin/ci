#!/bin/sh -exu

$(dirname $0)/ci.branches

MODULES=$(ls orphanarium-*/*.cabal)

VERSION=$(date '+%Y%m%d%H%M%S')-$(git log --pretty=format:%h -n 1)

for m in $MODULES; do
  x=$(dirname $m)
  (cd $x && cabal haddock --hoogle && aws s3 --region=ap-southeast-2 cp dist/doc/html/$x/$x.txt s3://ambiata-dist/$x-hoogle/$VERSION/$x-hoogle-$VERSION.txt) || exit $?
done
