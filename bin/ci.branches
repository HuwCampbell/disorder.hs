#!/bin/sh -exu

export LC_COLLATE=en_US.UTF-8
export LANG=en_US.UTF-8
PATH=/usr/pgsql-9.3/bin:$PATH; export PATH

rm -rf lib; mkdir -p lib
git submodule sync
git submodule init
git submodule update

if find $HOME/.cabal/packages/hackage.haskell.org/00-index.cache -type f -mtime +1 | grep -q 00-index; then
    cabal update
fi

for x in core cli daemon registry web; do
  (cd hydra-$x && make test) || exit $?
done
