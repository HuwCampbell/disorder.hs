#!/bin/sh -exu

export LC_COLLATE=en_US.UTF-8
export LANG=en_US.UTF-8

git submodule sync
git submodule init
git submodule update

./framework/cabal update

# test everything

MODULES=$(ls orphanarium-*/*.cabal)

for x in $MODULES; do
  (cd $(dirname $x) && ./cabal test) || exit $?
done

# build everything

for x in $MODULES; do
 (cd $(dirname $x) && ./cabal build) || exit $?
done
